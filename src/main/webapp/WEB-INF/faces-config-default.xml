<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
    http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">
	<application>
		<!-- Added default language and supported languages -->
		<locale-config>
			<default-locale>en</default-locale>
			<supported-locale>en</supported-locale>
			<supported-locale>fr_FR</supported-locale>
		</locale-config>

		<!-- URL of the package containing the messages[ENTITY]_[LANGUAGE].properties -->
		<resource-bundle>
			<base-name>messages.messages</base-name>
			<var>msg</var>
		</resource-bundle>

	</application>

	<!-- Navigation for the connection -->
	<navigation-rule>
		<from-view-id>/views/default/login.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>SUCCESS</from-outcome>
			<to-view-id>/views/default/userList.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>ERROR</from-outcome>
			<to-view-id>/views/default/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	<!-- Navigation for creating/update a user/note -->
	<navigation-rule>
		<from-view-id>/views/default/manageUser.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>SUCCESS</from-outcome>
			<to-view-id>/views/default/userList.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>ERROR</from-outcome>
			<to-view-id>/views/default/manageUser.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/views/default/manageNote.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>SUCCESS</from-outcome>
			<to-view-id>/views/default/noteList.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>ERROR</from-outcome>
			<to-view-id>/views/default/manageNote.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<!-- Navigation for displaying preloaded registration page -->
	<navigation-rule>
		<from-view-id>/views/default/userList.xhtml</from-view-id>
		<navigation-case>
			<from-outcome>preload-user</from-outcome>
			<to-view-id>/views/default/manageUser.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>create-user</from-outcome>
			<to-view-id>/views/default/manageUser.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>
	
	<navigation-rule>
		<from-view-id>/views/default/noteList.xhtml</from-view-id>
		<navigation-case>
		    <from-action>#{noteManagedBean.loadNote(currentNote)}</from-action>
			<from-outcome>SUCCESS</from-outcome>
			<to-view-id>/views/default/manageNote.xhtml</to-view-id>
		</navigation-case>
		<navigation-case>
			<from-outcome>create-note</from-outcome>
			<to-view-id>/views/default/manageNote.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

	<!-- Navigation for logout -->
	<navigation-rule>
		<from-view-id>/views/default/userList.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{loginBean.logoutAction()}</from-action>
			<from-outcome>SUCCESS</from-outcome>
			<to-view-id>/views/default/login.xhtml</to-view-id>
		</navigation-case>
	</navigation-rule>

</faces-config>